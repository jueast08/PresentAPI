<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/PresentAPI">
	<Resource name="jdbc/database_sqlite"
			  auth="Container"
			  type="javax.sql.DataSource"
			  driverClassName="org.sqlite.JDBC"
			  url="jdbc:sqlite:present.db"
			  factory="org.apache.tomcat.dbcp.dbcp.BasicDataSourceFactory">
	</Resource>
	
    <Resource name="jdbc/database_psql"
              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost:5432/presentdb"
              user="testuser"
              password="password"
			  maxActive="20"
			  maxIdle="10"
			  maxWait="-1">
    </Resource>
	
	<Resource name="jdbc/database_mysql"
              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="com.mysql.jdbc.Driver"
              url="jdbc:mysql://localhost:5432/presentdb"
              user="testuser"
              password="password"
			  maxActive="20"
			  maxIdle="10"
			  maxWait="-1">
    </Resource>
</Context>
